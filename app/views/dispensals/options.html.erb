<div class="article columnSingle">
	<h3> Dispensal Information </h3>
	<b>Farmer: </b><%= @farmer.name %><br />
	<b>Seed: </b><%= @seed.humanize %><br />
	<b>Quantity: </b><%= @seed.pounds %><br/>
	<br />
	<br />
	<%= form_for(@dispensal) do |f| %>
		<% if @dispensal.errors.any? %>
		  <div id="error_explanation">
		    <h2><%= pluralize(@dispensal.errors.count, "error") %> prohibited this dispensal from being processed:</h2>

		    <ul>
		    <% @dispensal.errors.full_messages.each do |msg| %>
		      <li><%= msg %></li>
		    <% end %>
		    </ul>
		  </div>
		<% end %>
		<div class = "field">
			<b><%= f.label :quantity %>:</b>
			<%= text_field_tag :grams %>g
		</div>
		<div class = "field">
			<b><%= f.label :planting_date %>:</b>
			<%= text_field_tag :planting_date, nil, :class => "datepicker" %>
		</div>
		<div class = "field">
			<b><%= f.label :harvest_date %>:</b>
			<%= text_field_tag :harvest_date, nil, :class => "datepicker" %>
		</div>
		<div class = "field">
			<b><%= f.label :soil_test_zone %>:</b>
			<%= text_field_tag :soil_test_zone %>
		</div>
		<div class = "field">
			<b><%= f.label :row_feet %>:</b>
			<%= text_field_tag :row_feet %>ft
		</div>
		<div class = "field">
			<b><%= f.label :germination_rate %>:</b>
			<%= text_field_tag :germination_rate %>%
		</div>
		<div class = "field">
			<b><%= f.label :water_usage %>:</b>
			<%= text_field_tag :water_usage %>ft^3
		</div>
	  <div class="field">
		<%= f.label :tissue_samples %><br />
		<%= f.text_area :tissue_samples, :size => "43x10"  %>
	  </div>

	  <div class="field">
		<%= f.label :comments %><br />
		<%= f.text_area :comments, :size => "43x10"  %>
	  </div>
		<div class="field">
			<%= f.hidden_field :farmer_id %>
		</div>
		<div class="field">
			<%= f.hidden_field :seed_id %>
		</div>
		<div class="actions">
		  <%= f.submit %>
		</div>
	<% end %>
</div>
