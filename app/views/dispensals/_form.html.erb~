<%= form_for(@dispensal) do |f| %>
  <% if @dispensal.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@dispensal.errors.count, "error") %> prohibited this dispensal from being saved:</h2>

      <ul>
      <% @dispensal.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :family %><br />
    <%= f.text_field :family %>
  </div>
  <div class="field">
    <%= f.label :variety %><br />
    <%= f.text_field :variety %>
  </div>
  <div class="field">
    <%= f.label :quantity %><br />
    <%= f.number_field :quantity %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
